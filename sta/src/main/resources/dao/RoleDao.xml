<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sicnu.sta.dao.RoleDao">

    <select id="queryAllRoleList" resultType="Role">
        select * from role
    </select>

    <insert id="addRole" parameterType="User" useGeneratedKeys="true" keyProperty="roleId">
        insert into role(role_name, description) values(#{role.roleName}, #{role.description})
    </insert>

    <delete id="deleteUserRoleByRoleId">
        delete from user_role where role_id = #{roleId}
    </delete>

    <delete id="deleteRoleAuthByRoleId">
        delete from role_auth where role_id = #{roleId}
    </delete>

    <delete id="deleteRoleByRoleId">
        delete from role where role_id = #{roleId}
    </delete>

    <insert id="addRoleAuthByRoleId" parameterType="Integer">
        insert into role_auth(role_id, auth_id) values(#{roleId}, #{authId})
    </insert>

</mapper>